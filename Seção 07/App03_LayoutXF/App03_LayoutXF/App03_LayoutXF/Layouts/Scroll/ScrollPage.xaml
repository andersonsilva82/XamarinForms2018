<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App03_LayoutXF.Layouts.Scroll.ScrollPage">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" Scrolled="EnviaXY" x:Name="scroll">  <!-- Both = vertical e horizontal-->
            <StackLayout WidthRequest="1000" HeightRequest="1000" BackgroundColor="Azure">
                <Label Text="Welcome to Xamarin.Forms!" x:Name="lb" 
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>